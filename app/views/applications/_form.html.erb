<%= simple_form_for(@application) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :resume %>
    <%= f.input :cover_letter %>
    <%= f.association :job %>
    <%= f.input :opt_in %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
